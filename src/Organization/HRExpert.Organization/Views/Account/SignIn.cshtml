@model Platformus.Security.Backend.ViewModels.Account.SignInViewModel
@{ 
    this.ViewBag.Title = "Вход";
}
<h1>@ViewBag.Title</h1>
<form method="post">
  <single-line-text-editor asp-for="Email" />
  <secret-editor asp-for="Password" />
    <div class="form-group">
        <label>Логин:</label>
        <input type="text" name="Email"/>
    </div>
    <div class="form-group">
        <label>Пароль:</label>
        <input type="password" name="Password"/>
    </div>
  <div class="buttons">
    <button class="positive" type="submit">Войти</button>
    <div class="clear"></div>
  </div>
</form>
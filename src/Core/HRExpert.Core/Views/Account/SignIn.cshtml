@model HRExpert.Core.DTO.ViewModels.Account.SignInViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Вход";
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="x_panel ">
            <form class="form-horizontal" method="post" role="form">
                <div class="form-group">
                    <label asp-for="Login">Логин:</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="EmailIcon_LoginForm">@@</span>
                        <input asp-for="Login" name="Login" placeholder="user@ruscount.com" type="text" class="form-control" aria-describedby="EmailIcon_LoginForm">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="pwd">Пароль:</label>
                    <input asp-for="Password" name="Password" placeholder="Пароль" type="password" class="form-control">
                </div>
                <input type="submit" class="btn btn-primary" value="Войти" />
                <a href="/Account/Register" class="btn btn-default">Регистрация</a>
            </form>
        </div>
    </div>
</div>


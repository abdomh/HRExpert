@model HRExpert.Core.DTO.ViewModels.Account.RegisterViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Регистрация";
}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="x_panel ">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label asp-for="Name" for="pwd">Имя:</label>
                    <input asp-for="Name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Логин/Email:</label>
                    <input asp-for="Email" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Password" for="pwd">Пароль:</label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
                <input type="submit" class="btn btn-primary" value="Регистрация" />
                <a href="/Account/SignIn" class="btn btn-default">Войти</a>
            </form>
        </div>
    </div>
</div>

